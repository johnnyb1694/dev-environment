{

    // ---- General properties ----
    "name": "Dev - Frontend",
    "remoteUser": "root",
    "shutdownAction": "none",
    // Note: we need this in the case of node to configure local dependencies for development
    "postCreateCommand": "npm ci && /bin/sh serve.sh",
    // Note: this ensures that the 'CMD' directive expressed in the Dockerfile
    //      does not get administered (which is desired behaviour for a development environment)
    "overrideCommand": true,

    // ---- Docker compose properties ----
    "dockerComposeFile": ["../../compose.dev.yml"],
    "service": "frontend",
    // Note: this must correspond to the volume created in `compose.dev.yml`
    "workspaceFolder": "/project/frontend", 

    // ---- Development plugins ----
    "customizations": {
        "vscode": {
            "extensions": [
                "xabikos.javascriptsnippets"
            ],
            "settings": {
                // Note: this ensures that the '/frontend' folder is tracker in version control
                "git.openRepositoryInParentFolders": "always",
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    }

}
