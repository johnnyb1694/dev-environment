{

    // ---- General properties ----
    "name": "Dev - Backend",
    "remoteUser": "root",
    "shutdownAction": "stopCompose",
    "postCreateCommand": "pip install -r requirements.txt && uvicorn 'main:app' --host=0.0.0.0 --port=8000",

    // ---- Docker compose properties ----
    "dockerComposeFile": ["../../compose.dev.yml"],
    "service": "backend",
    // Note: this must correspond to the volume created in `compose.dev.yml`
    "workspaceFolder": "/project/backend", 

    // ---- Development plugins ----
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
                // Add more extensions here...
            ],
            "settings": {
                // Note: this ensures that the '/frontend' folder is tracker in version control
                "git.openRepositoryInParentFolders": "always",
                "terminal.integrated.defaultProfile.linux": "bash"
                // Add more settings here...
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    }

}
